{
    "manifest_version": 2,
    "name": "Discord Token Login",
    "version": "1.5",
    "author" : "WiLuX",
    "homepage_url": "https://github.com/WiLuX-Source/Discord-Token-Login",
    "description": "A browser extension that allows you to login your discord accounts with one click.",
    "permissions": ["tabs","downloads","contextMenus","storage","*://discord.com/*","webRequest","webRequestBlocking"],
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "browser_action": {
      "default_icon": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      },
      "default_popup" : "pages/popup/popup.html"
    },
    "content_scripts" : [
      {
        "matches" : ["*://discord.com/*"],
        "js" : ["contentscript.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "tokenlogin@id.com"
      }
    }
}
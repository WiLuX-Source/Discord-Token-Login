{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"manifest_version": 2,
	"name": "Discord Token Login",
	"version": "0",
	"author": "WiLuX",
	"homepage_url": "https://github.com/WiLuX-Source/Discord-Token-Login",
	"description": "0",
	"permissions": [
		"tabs",
		"downloads",
		"contextMenus",
		"storage",
		"*://discord.com/*",
		"webRequest",
		"webRequestBlocking"
	],
	"icons": {
		"16": "icons/16.png",
		"24": "icons/24.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"browser_action": {
		"default_icon": {
			"32": "icons/32.png",
			"24": "icons/24.png"
		},
		"default_popup": "popup/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://discord.com/*"],
			"js": ["contentscript.js"]
		}
	],
	"background": {
		"scripts": ["background/background.js"],
		"persistent": false
	}
}
